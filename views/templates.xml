<template id="eiser_product_detail" inherit_id="website_sale.product" name="product_detail">
    <xpath expr="//section[@id='product_detail']" position="replace">
    <div class="product_image_area">
    <form t-if="product._is_add_to_cart_possible()" action="/shop/cart/update" method="POST">
      <div class="container">
        <div class="row s_product_inner">
          <div class="col-lg-6">
            <div class="s_product_img">
              <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-ride="carousel"
              >
                <ol class="carousel-indicators">
                  <t t-foreach="product.product_image_ids" t-as="image_id">
                    <t t-set="activeClass" t-value="product.class_for(image_id_first)"/>
                    <li
                      data-target="#carouselExampleIndicators"
                      t-attf-data-slide-to="{{image_id_index}}"
                      t-attf-class="{{activeClass}}"
                    >
                      <img
                          width="60"
                          height="60"
                        t-att-src="'data:image/png;base64,%s' % to_text(image_id.image)" 
                        alt=""
                      />
                    </li>
                  </t>
                </ol>
                <div class="carousel-inner">
                  <t t-foreach="product.product_image_ids" t-as="image_id2">
                  <t t-set="activeClass2" t-value="product.class_for(image_id2_first)"/>
                  <div t-attf-class="carousel-item {{activeClass2}}">
                    <img
                      class="d-block w-100"
                      t-att-src="'data:image/png;base64,%s' % to_text(image_id2.image)"
                       t-att-alt="product.name"
                    />
                  </div>
                </t>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
              <h3 t-esc="product.name"></h3>
              <h2 t-esc="product.price"></h2>
              <ul class="list">
                <li t-if="category" class="breadcrumb-item">
                  <a class="active" t-att-href="keep('/shop/category/%s' % slug(category), category=0)" t-field="category.name"  >
                   
                  </a
                  >
                </li>
                <li>
                  <a href="#" t-if="product.qty_available &gt; 0"> <span>Availibility</span> : In Stock</a>
                  <a href="#" t-if="product.qty_available &lt; 1"> <span>Availibility</span> : Out of Stock</a>
                </li>
              </ul>
              <p t-raw="product.web_description"></p>
              <div class="product_count">
                <label for="qty">Quantity:</label>
                <input
                  type="text"
                  name="qty"
                  id="sst"
                  maxlength="12"
                  value="1"
                  title="Quantity:"
                  class="input-text qty"
                />
                <button
                  onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                  class="increase items-count"
                  type="button"
                >
                  <i class="lnr lnr-chevron-up"></i>
                </button>
                <button
                  onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                  class="reduced items-count"
                  type="button"
                >
                  <i class="lnr lnr-chevron-down"></i>
                </button>
              </div>
              <div class="card_area">
                <a id="add_to_cart" class="main_btn js_check_product a-submit" href="#">Add to Cart</a>
                <a class="icon_btn" href="#">
                  <i class="lnr lnr lnr-diamond"></i>
                </a>
                <a class="icon_btn" href="#">
                  <i class="lnr lnr lnr-heart"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      </form>
    </div>
</xpath>
</template>


