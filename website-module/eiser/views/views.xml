    </field>
  </record>
  <record id="eiser_seller_list" model="ir.ui.view">
    <field name="name">Eiser sellers: list</field>
    <field name="model">res.partner</field>
    <field name="arch" type="xml">
      <tree string="Sellers">
        <field name="name"/>
      </tree>
    </field>
  </record>
  <record id="eiser_seller_form" model="ir.ui.view">
    <field name="name">Eiser sellers: form</field>
