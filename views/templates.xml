    <template id="eiser_products" inherit_id="website_sale.products" name="Products">
        <xpath expr="//table" position="replace">
            <div class="cat_product_area">
                <div class="latest_product_inner">
                    <div class="row">
                        
                        <div  class="col-lg-4 col-md-6"  t-foreach="bins" t-as="tr_product">
